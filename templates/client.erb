client

<% ports.sort.each do |key,val| -%>
remote <%= ip %> <%= val["port"] == "" ? defaults["port"] : val["port"] %> <%= val["proto"] == "" ? defaults["proto"] : val["proto"] %>
<% end #ports each -%>

tls-remote <%= defaults["hostname"] %>
ca <%= scope.lookupvar('settings::ssldir') %>/certs/ca.pem
cert <%= scope.lookupvar('settings::ssldir') %>/certs/<%= fqdn.downcase %>.pem
key <%= scope.lookupvar('settings::ssldir') %>/private_keys/<%= fqdn.downcase %>.pem
crl-verify <%= scope.lookupvar('settings::ssldir') %>/crl.pem
tls-auth /etc/openvpn/puppet-keys/ta.key 1

cipher AES-256-CBC
auth RSA-SHA
tls-cipher DHE-RSA-AES256-SHA
remote-cert-eku "TLS Web Server Authentication"

log-append /var/log/openvpn/client-<%= ip %>.log
status /var/log/openvpn/client-<%= ip %>.status 1
status-version 1
verb 2

#user openvpn
#group openvpn
#persist-key
#persist-tun
script-security 1
daemon

dev tun
comp-lzo
nobind
socket-flags TCP_NODELAY
